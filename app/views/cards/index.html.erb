<% if notice.present? %>
  <p class="alert alert-info"><%= notice %></p>
<%end%>

<h1>Card list</h1>
  <table class="table table-light shadow-sm">
    <thead style="border: 0px;">
      <tr>
        <th>Mood</th>
        <th>Title</th>
        <th>Description</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% current_user.cards.each do |card| %>
        <tr>
          <td><%= card.mood %></td>
          <td><%= card.title %></td>
          <td><%= card.content.truncate(30) %></td>
          <td><%= link_to 'Show', card %><br>
          <%= link_to 'Edit', edit_card_path(card) %><br>
          <%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
