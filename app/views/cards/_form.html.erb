<% if card.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">This card could not be saved because :
      <ul class="my-0">
      <% card.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>

<div class="ticket">
   <%= form_with(model: card, local: true) do |form| %>
    
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :content %>
      <%= form.text_area :content, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :mood %>
      <%= form.select :mood,
        ["Proactive", "Serious", "Fun", "Empowering", "Interesting"],
        {}, class: "form-control" %>
    </div>

    <div class="actions">
      <%= form.submit "Submit", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>