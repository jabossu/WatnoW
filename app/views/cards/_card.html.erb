<div class="ticket ticket-mood-<%= card.mood.downcase %> d-flex px-4 align-items-center">
  <div style="height: 100%">
  <% if card.content.blank? %>
    <h1><%= card.title %></h1>
  <% else %>
      <h3><%= card.title %></h3>
      <p><%= card.content %></p>
  <% end %>
  </div>
</div> 
<div class="row">
  <div class="col">
    <div class="text-left text-muted font-weight-bold"><small class="font-italic">1 of <%= current_user.cards.count %> cards</small></div>
  </div>
  <div>
    <div class="text-right"><small><%= link_to '<span class="fa fa-trash-alt"> delete</span>'.html_safe, card, method: :delete, data: { confirm: 'Are you sure?' } %></small></div>
  </div>
</div>